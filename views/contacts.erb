<h2>Введите ваши данные</h2>

<form action="/contacts" method="POST">
    <div>
      <label class="form-label">Ваш email</label>
      <input name="email" type="email"  class="form-control" placeholder="Введите ваш email">
    </div>

    <div>
    	<textarea name="message" cols="90" rows="5" placeholder="Введите сообщение"></textarea>
	</div>

    <button type="submit" class="btn btn-primary">Отправить</button>
</form>
